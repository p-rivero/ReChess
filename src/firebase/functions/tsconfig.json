{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "paths": {
      "db/*": ["../db/*"],
      "@/*": ["./src/*"],
    }
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
