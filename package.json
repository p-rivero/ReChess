{
  "name": "rechess",
  "version": "1.0.0",
  "scripts": {
    "dev": "run-p pre-compile start-emulator dev-only",
    "build": "run-s pre-compile type-check build-only",
    "preview": "vite preview --port 4173 --config .config/vite.config.ts",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore --config .config/.eslintrc.cjs",
    "test": "jest --config .config/jest.config.js",
    "pre-compile": "run-p build-wasm generate-type-guard generate-icons minify-svg",
    "generate-type-guard": "ts-auto-guard ./src/protochess/types.d.ts && sed -i 's/import {/import type {/g' ./src/protochess/types.guard.ts",
    "generate-icons": "./src/assets/img/icons/generate-icons.sh",
    "minify-svg": "svgo -f src/assets -r -q --multipass",
    "build-wasm": "make all use-pathname --directory protochess-engine/protochess-engine-wasm",
    "type-check": "vue-tsc --noEmit",
    "build-only": "vite build --config .config/vite.config.ts",
    "dev-only": "vite --config .config/vite.config.ts",
    "start-emulator": "firebase emulators:start",
    "postinstall": "chmod +x ./src/assets/img/icons/generate-icons.sh; patch-package"
  },
  "dependencies": {
    "@creativebulma/bulma-tooltip": "^1.2.0",
    "bulma": "^0.9.4",
    "bulma-checkbox": "^1.2.1",
    "chessgroundx": "./chessgroundx",
    "comlink": "^4.4.1",
    "cropme": "^1.4.3",
    "firebase": "^9.22.0",
    "fuse.js": "^6.6.2",
    "pinia": "^2.1.3",
    "protochess-multithread": "./protochess-engine/protochess-engine-wasm/pkg-parallel",
    "protochess-singlethread": "./protochess-engine/protochess-engine-wasm/pkg",
    "sanitize-filename": "^1.6.3",
    "sass": "^1.62.1",
    "sortablejs": "^1.15.0",
    "sortablejs-vue3": "^1.2.9",
    "vue": "^3.3.4",
    "vue-highlight-words": "^3.0.1",
    "vue-input-autowidth": "^2.2.0",
    "vue-markdown-render": "^2.0.1",
    "vue-router": "^4.2.1",
    "wasm-feature-detect": "^1.5.1"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^2.0.7",
    "@rushstack/eslint-patch": "^1.2.0",
    "@tsconfig/node20": "^1.0.1",
    "@types/jest": "^29.5.1",
    "@types/node": "^20.2.1",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vue/eslint-config-typescript": "^11.0.3",
    "@vue/test-utils": "^2.3.2",
    "@vue/tsconfig": "^0.4.0",
    "eslint": "^8.41.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-sort-imports-es6-autofix": "^0.6.0",
    "eslint-plugin-vue": "^9.13.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "npm-run-all": "^4.1.5",
    "patch-package": "^7.0.0",
    "svgo": "^3.0.2",
    "ts-auto-guard": "^4.1.3",
    "ts-jest": "^29.1.0",
    "typescript": "~5.0.4",
    "vite": "^4.3.8",
    "vue-eslint-parser": "^9.3.0",
    "vue-tsc": "^1.6.5"
  }
}
