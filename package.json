{
  "name": "rechess",
  "version": "1.0.0",
  "scripts": {
    "dev": "run-p pre-compile start-emulator dev-only",
    "build": "run-s pre-compile type-check build-only",
    "preview": "vite preview --port 4173 --config .config/vite.config.ts",
    "deploy": "run-s build deploy-only",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore --config .config/.eslintrc.cjs",
    "test": "jest --config .config/jest.config.js",
    "pre-compile": "run-p build-wasm generate-type-guard generate-icons",
    "generate-type-guard": "ts-auto-guard ./src/protochess/types.ts && sed -i 's/import {/import type {/g' ./src/protochess/types.guard.ts",
    "generate-icons": "./src/assets/img/icons/generate-icons.sh",
    "build-wasm": "make all use-pathname --directory protochess-engine/protochess-engine-wasm",
    "type-check": "vue-tsc --noEmit",
    "build-only": "vite build --config .config/vite.config.ts",
    "dev-only": "vite --config .config/vite.config.ts",
    "start-emulator": "firebase emulators:start --project rechess-web",
    "deploy-only": "firebase deploy --project rechess-web",
    "postinstall": "chmod +x ./src/assets/img/icons/generate-icons.sh && (cd functions && npm i)"
  },
  "dependencies": {
    "bulma": "^0.9.4",
    "bulma-checkbox": "^1.2.1",
    "chessgroundx": "./chessgroundx",
    "comlink": "^4.3.1",
    "firebase": "^9.18.0",
    "firebaseui": "^6.0.2",
    "pinia": "^2.0.21",
    "protochess-multithread": "./protochess-engine/protochess-engine-wasm/pkg-parallel",
    "protochess-singlethread": "./protochess-engine/protochess-engine-wasm/pkg",
    "sanitize-filename": "^1.6.3",
    "sass": "^1.58.0",
    "vue": "^3.2.38",
    "vue-input-autowidth": "^2.2.0",
    "vue-markdown-render": "^2.0.1",
    "vue-router": "^4.1.6",
    "wasm-feature-detect": "^1.4.0"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^2.0.7",
    "@rushstack/eslint-patch": "^1.1.4",
    "@types/jest": "^29.4.4",
    "@types/node": "^18.15.5",
    "@vitejs/plugin-vue": "^3.0.3",
    "@vue/eslint-config-typescript": "^11.0.0",
    "@vue/test-utils": "^2.3.1",
    "@vue/tsconfig": "^0.1.3",
    "eslint": "^8.22.0",
    "eslint-plugin-vue": "^9.3.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "npm-run-all": "^4.1.5",
    "ts-auto-guard": "^4.1.2",
    "ts-jest": "^29.0.5",
    "typescript": "~4.7.4",
    "vite": "^3.0.9",
    "vue-tsc": "^0.40.7"
  }
}
